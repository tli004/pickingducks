<h1>Register</h1>

<%= form_for current_user do |f| %>	
	<p>
		<%= f.label :first_name, :class => "reg_label" %>: 
		<%= f.text_field :first_name, current_user.first_name %>
	</p>
	<p>
		<%= f.label :last_name, :class => "reg_label" %>: 
		<%= f.text_field :last_name, current_user.last_name %>
	</p>
	<p>
		<%= f.label :username, :class => "reg_label" %>: 
		<%= f.text_field :username, current_user.username %>
	</p>	
	<p>
		<%= f.label :address1, :class => "reg_label" %>: 
		<%= f.text_field :address1 %>
	</p>
	<p>
		<%= f.label :address2, :class => "reg_label" %>: 
		<%= f.text_field :address2 %>
	</p>	
	<p>
		<%= f.label :city, :class => "reg_label" %>: 
		<%= f.text_field :city %>
	</p>		
	<p>
		<%= f.label :state, :class => "reg_label" %>: 
		<%= f.text_field :state %>
	</p> 
	<p>
		<%= f.label :zip, :class => "reg_label" %>: 
		<%= f.text_field :zip, :size => 5 %>
	</p>
	<p><%= f.submit 'Update Account', :class => 'button submit_btn' %></p>
<% end %>