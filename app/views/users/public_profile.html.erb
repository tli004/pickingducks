<div id="profile">	
	<h2>
		<% if @user.profile_pic.url != "/images/missing.jpg" %>
	 		<%= image_tag @user.profile_pic.url(:medium), :class => "public_profile_pic" %>
		<% end %> <%= @user.username.upcase %>
	</h2>  	
	<hr />
	<div class="box_number">
		<span>WINS</span>
		<div style="color:rgb(125,203,31)"><%= @user.wins %></div>
	</div>
	<div class="box_number">
		<span>LOSSES</span>
		<div style="color:red"><%= @user.losses %></div>	 				
	</div>
	<div class="box_number">
		<span>TIES</span>
		<div><%= @user.ties %></div>	 				
	</div>
	<div class="box_number">
		<span>DUCKS</span>
		<div style="color:#F84A0E"><%= @user.bankroll.round(2) %></div>
	</div>
</div>
 <hr />
 <h2>Pending Bets</h2>
 <table>
 	<% if @pending_bets.length > 0 %>
 	<tr>
	 	<% @pending_bets.each_with_index do |bet, i| %>	 		
	 		<% if current_user && (current_user.purchases.map(&:bet_id).include?(bet.id) || current_user.id == @user.id) %>
		 			<td class="public_bet_info">
		 				<span class="public_bet">VISIBLE: <br/></span><span style="font-weight:bold"><%= bet.amount %>d on <%= bet.event.bet_type(bet.bet_type) %><br/></span> for event <br/><a href="<%= event_path(bet.event.id) %>"><%= bet.event.away_team %> @ <%= bet.event.home_team %></a> <br/>on <%= bet.event.start_time.strftime("%m-%d") %>	 				
	 				 	
	 		<% else %>
		 			<td class="public_bet_info">				 		 								
	 			<% if bet.money_price > 0 %>	
	 				<span class="private_bet">HIDDEN:<br/> </span>Made pick on event <br/><a href="<%= event_path(bet.event.id) %>"><%= bet.event.away_team %> @ <%= bet.event.home_team %></a> <br/>on <%= bet.event.start_time.strftime("%m-%d") %>	 				
			 				<br /><%= link_to "Purchase bet info for #{bet.money_price} dollars", pay_money_for_bet_path(bet.user, bet.id),:class => "purchase_bet_info_for_money", :data => {:username => bet.user.username, :home_team => bet.event.home_team, :away_team => bet.event.away_team, :price => bet.money_price } %>		 								
	 			<% else %>
			 				<span class="public_bet">VISIBLE: <br/></span><span style="font-weight:bold"><%= bet.amount %>d on <%= bet.event.bet_type(bet.bet_type) %><br/></span> for event <br/><a href="<%= event_path(bet.event.id) %>"><%= bet.event.away_team %> @ <%= bet.event.home_team %></a> <br/>on <%= bet.event.start_time.strftime("%m-%d") %>
	 			<% end %>
	 				</td>
 			<% end %>
 			<% if i != 0 && i % 5 == 0 %>
				</tr>
				<tr>
			<% end %>
	 	<% end %>
	 	</tr>
	 <% else %>
	 	<tr>No pending bets at this time.</tr>
	 <% end%> 
 </table>
 <div class="confirm_purchase_bet_info">
 	<h4>Purchase bet info?</h4>
 	<span> </span>
 </div>
 <br />
 <br /> 
 <% if @past_straights.length > 0 %>
<table class="track_record_graph" style="display:none">
	<caption>Earnings: Straight Bets</caption>
	<thead>
		<tr>
			<th scope="col">0</th>
		<% @straight_change_dates.each do |date| %>
			<th scope="col"><%= date %></th>
		<% end %>
		</tr>
	</thead>
	<tbody>
		<tr>
			<th scope="row">Ducks</th>
			<% total = 0 %>
			<td>0</td>
			<% @past_straights.each do |bet| %>
			<% bet.winning ? total += bet.amount : total -= bet.amount %>
				<td><%= total %></td>
			<% end %>	
		</tr>
	</tbody>
</table>
<% end %>

<% if @past_parlays.length > 0 %>
<table class="track_record_graph" style="display:none">
	<caption>Earnings: Parlay Bets</caption>
	<thead>
		<tr>
			<th scope="col">0</th>
		<% @parlay_change_dates.each do |date| %>
			<th scope="col"><%= date %></th>
		<% end %>
		</tr>
	</thead>
	<tbody>
		<tr>
			<th scope="row">Ducks</th>
			<td>0</td>
			<% total = 0 %>
			<% @past_parlays.each do |parlay| %>
			<% parlay.winning ? total += parlay.amount * PARLAY_ODDS[parlay.bets.length-1]: total -= parlay.amount %>
