<table id="featured_games_table">
<% if featured.length > 0 %>
	<tr>
		<th>Start Time</th>
		<th>Matchup</th>
		<% if featured[0].sport == 3 %>
		<th>Moneyline</th>
		<% else %>
		<th>Handicap</th>
		<% end %>
		<th>Total Points</th>
		<th></th>
	</tr>
	<% featured.each do |game| %>
	<tr>
		<td>
			<span style="font-weight:bold"><%= game.start_time.strftime("%I:%M").upcase %></span><br />
			<%= game.start_time.strftime("%P %Z") %>
		</td>
		<td>
			<span class="featured_team_name"><%= game.away_team %>@</span><br/> <span class="featured_team_name"><%= game.home_team %></span>
		</td>
		<td>
			<% if game.sport == 3 %>
				<%= game.moneyline_home %><br />
				<%= game.moneyline_away %>
			<% else %>
				<%= -game.spread %><br />
				<%= game.spread %>
			<% end %>
		</td>
		<td>
			<%= game.total_points %>
		</td>
		<% if current_user %>
		<td>
			<a href="<%= new_event_bet_path(game.id) %>" class="wager_link_home button black_gradient">Wager</a>
		</td>
		<% end %>
	</tr>
	<% end %>
<% else %>
	<tr><th>There are no games today for your selected sport</th></tr>
<% end %>
</table>
